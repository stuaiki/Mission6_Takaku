@model List<Movie>

<!--Heading-->
<h1 class="text-center">Joel Hilton Favorite Movie List</h1>
<br />

<!--create a table that import data from database. Edited table with bootstrap-->
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <td class="bg-warning"><b>MovieID</b></td>
            <td class="bg-warning"><b>Category</b></td>
            <td class="bg-warning"><b>Title</b></td>
            <td class="bg-warning"><b>Year</b></td>
            <td class="bg-warning"><b>Director</b></td>
            <td class="bg-warning"><b>Rating</b></td>
            <td class="bg-warning"><b>Edited</b></td>
            <td class="bg-warning"><b>Lent To</b></td>
            <td class="bg-warning"><b>Copied To Plex</b></td>
            <td class="bg-warning"><b>Notes</b></td>
            <td class="bg-warning"></td>
            <td class="bg-warning"></td>
        </tr>
    </thead>

    <!--For each record, it import the following features.-->
    @foreach (var x in Model)
    {
    <tbody>
        <tr>
            <td>@x.MovieId</td>
            <td>@x.Category?.CategoryName</td><!--It allows to put null value for category name-->
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.CopiedToPlex</td>
            <td>@x.Notes</td>


            <!--Create edit and delete button for users to make changes on the table.-->
            <td>
                <a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a>
            </td>
            <td>
                <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a>
            </td>
        </tr>
    </tbody>
    }

</table>

